{
  "name": "@umk/strings",
  "version": "0.1.0",
  "description": "String utilities",
  "author": "Uladzislau Maslakou <umaslakou@gmail.com>",
  "homepage": "https://github.com/umk/strings#readme",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "types": "dist/mjs/index.d.ts",
  "scripts": {
    "build": "rimraf ./dist && run-s build:*",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:mjs": "tsc -p tsconfig.mjs.json",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.{ts,js}\" --write",
    "fix:lint": "eslint src --ext .ts,.js --fix",
    "test": "run-s test:*",
    "test:prettier": "prettier \"src/**/*.{ts,js}\" --list-different",
    "test:lint": "eslint src --ext .ts,.tsx,.js",
    "test:unit": "jest test --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/umk/strings.git"
  },
  "bugs": {
    "url": "https://github.com/umk/strings/issues"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "jest-mock": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "exports": {
    ".": {
      "import": "./dist/mjs/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
